---
import Layout from "../../layouts/Layout.astro";
import Logo from "../../components/logo.astro";
import Input2 from "../../components/inputs/input2.astro";
---

<Layout title="Correofallido">
    <main>
        <div class="h-full w-full absolute z-10 bg-black bg-opacity-60"></div>
        <img
            src="../src/images/loginImg/bg.jpg"
            alt=""
            class="w-full h-full fixed z-0"
        />
        <div
            class="all relative z-20 flex h-screen items-center justify-center gap-0"
        >
            <div class="w-full h-full">
                <div class="flex w-full h-full items-center justify-center">
                    <Logo />
                </div>
            </div>

            <div class="justify-center border-l h-max border-white py-96"></div>

            <div
                class="login-container text-white w-full h-full
                 flex flex-col justify-center px-56 gap-28"
            >
        <p class="font-bold text-3xl">多Olvidaste tu contrase単a?</p>
        <p class="text-2xl -mt-14">
          Proporciona el correo electronico de tu cuenta para restablecer su
          contrase単a.
        </p>

        <form action="" class="form flex flex-col">
          <p class="text 30 w-full">Correo electronico</p>
          <Input2 inputType="email" inputPlaceholder="correo Electronico"></Input2>
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
            ></path>
            <path d="M3 7l9 6l9 -6"></path>
          
      
        <div>
          <div class="flex justify-center mt-10">
            <button
              class="bg-principalGreen px-6 py-2 text-xl h-14 rounded-lg w-full"
            >
              Pedir enlace para restablecer contrase単a
            </button>
          </div>
          <div class="flex items-center justify-center mt-8">
            <p class="text-xl text-center w-full">Cancelar</p>
          </div>
        </div>
      </form>
      </div>
    </div>
  </main>
</Layout>

