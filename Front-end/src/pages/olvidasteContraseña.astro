---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/logo.astro";
import InputText from "../components/inputs/InputText.astro";
---

<Layout title="0lvidarContraseña">
  <main>
    <div class="h-full w-full absolute z-10 bg-black bg-opacity-60"></div>
    <img
      src="../src/images/loginImg/bg.jpg"
      alt=""
      class="w-full h-full fixed z-0"
    />
    <div
      class="all relative z-20 flex h-screen items-center justify-center gap-0"
    >
      <div class="w-full h-full">
        <div class="flex w-full h-full items-center justify-center">
          <Logo />
        </div>
      </div>
      <div
        class="login-container text-white w-full h-full
      flex flex-col justify-center pr-60 gap-24"
      >
        <p class="font-bold text-3xl">¿Olvidaste tu contraseña?</p>
        <p class="text-2xl -mt-14">
          Proporciona el correo electronico de tu cuenta para restablecer su
          contraseña.
        </p>

        <form action="" class="form flex flex-col">
          <p class="text 30">Correo electronico</p>
          <div
            class="mail h-16 rounded-lg flex items-center border border-solid border-white pl-2 shadow-xl gap-2"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
            ></path>
            <path d="M3 7l9 6l9 -6"></path>
          </div>
        </form>
        <div>
          <div class="flex justify-center mt-10">
            <button class="bg-principalGreen px-6 py-2 text-xl rounded-lg">
              Pedir enlace para restablecer contraseña
            </button>
          </div>
          <div class="flex items-center justify-center mt-8">
            <p class="text-xl">Cancelar</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<svg
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  transform="rotate(0)matrix(-1, 0, 0, 1, 0, 0)"
  ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
    id="SVGRepo_tracerCarrier"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke="#ffffff"
    stroke-width="0.192"></g><g id="SVGRepo_iconCarrier"
    ><path
      fill-rule="evenodd"
      clip-rule="evenodd"
      d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10zm-1.5-5.009c0-.867.659-1.491 1.491-1.491.85 0 1.509.624 1.509 1.491 0 .867-.659 1.509-1.509 1.509-.832 0-1.491-.642-1.491-1.509zM11.172 6a.5.5 0 0 0-.499.522l.306 7a.5.5 0 0 0 .5.478h1.043a.5.5 0 0 0 .5-.478l.305-7a.5.5 0 0 0-.5-.522h-1.655z"
      fill="#EE0004"></path></g
  ></svg
>
